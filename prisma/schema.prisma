datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  password      String?
  name          String?
  role          String    @default("USER") // ADMIN, USER
  phone         String?   @unique
  
  // OAuth fields
  googleId      String?   @unique
  image         String?
  
  // Analytics
  lastLogin     DateTime?
  loginCount    Int       @default(0)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  sessions      Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
}

model DailyPrice {
  id        String   @id @default(cuid())
  commodity String   // COFFEE_ARABICA, COFFEE_ROBUSTA, PEPPER
  district  String   // KODAGU, HASSAN
  price     Float
  unit      String   // KG, QUINTAL
  date      DateTime @default(now())
  source    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, commodity, district])
}
