datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // ADMIN, USER
  phone     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyPrice {
  id        String   @id @default(cuid())
  commodity String   // COFFEE_ARABICA, COFFEE_ROBUSTA, PEPPER
  district  String   // KODAGU, HASSAN
  price     Float
  unit      String   // KG, QUINTAL
  date      DateTime @default(now())
  source    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
